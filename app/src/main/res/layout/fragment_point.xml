<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:id="@+id/point_score_space"
                android:layout_width="match_parent"
                android:layout_height="140dp" />

            <TextView
                android:id="@+id/point_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/point_score"
                android:textSize="105dp" />

            <TextView
                android:id="@+id/point_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/point_max"
                android:textSize="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/point_p1name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/point_p1name" />

                <EditText
                    android:id="@+id/point_p2name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/point_p2name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/point_p1score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/point_score_button"
                    android:onClick="pointLeftScore"/>

                <Button
                    android:id="@+id/point_p2score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/point_score_button"
                    android:onClick="pointRightScore"/>

            </LinearLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/point_radio_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/point_radio_left" />

                <RadioButton
                    android:id="@+id/point_radio_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/point_radio_right" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/point_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="pointStart"
                    android:text="@string/point_start" />

                <Button
                    android:id="@+id/point_reset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="pointReset"
                    android:text="@string/point_reset" />
            </LinearLayout>

            <Button
                android:id="@+id/point_view_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/point_view_log" 
                android:onClick="pointViewLog"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/point_setmax_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/point_p1max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:ems="10"
                android:inputType="number"
                android:text="@string/point_maxval"
                android:textSize="100dp" />

            <TextView
                android:id="@+id/point_colon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/point_colon"
                android:textSize="100dp" />

            <EditText
                android:id="@+id/point_p2max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:ems="10"
                android:inputType="number"
                android:text="@string/point_maxval"
                android:textSize="100dp" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
